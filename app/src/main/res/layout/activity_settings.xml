<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.cursoandroid.petinder.activity.Settings"
    android:orientation="vertical"
    android:padding="20sp">

    <Button
        android:id="@+id/backId"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20sp"
        android:background="#FF655B"
        android:text="back" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:layout_width="100sp"
                android:layout_height="100sp"
                android:id="@+id/imagemPerfilId"
                android:src="@mipmap/ic_launcher"
                android:layout_gravity="center"
                android:layout_marginBottom="20sp" />

            <EditText
                android:id="@+id/nomePerfilId"
                android:layout_width="375dp"
                android:layout_height="42dp"
                android:layout_marginBottom="20sp"
                android:background="@null"
                android:hint="Name"
                android:textAppearance="@style/TextAppearance.AppCompat.Display1" />

            <EditText
                android:id="@+id/phonePerfilId"
                android:layout_width="46dp"
                android:layout_height="45dp"
                android:layout_marginBottom="20sp"
                android:background="@null"
                android:hint="Age"
                android:inputType="phone"
                android:textAppearance="@style/TextAppearance.AppCompat.Large" />

            <EditText
                android:id="@+id/descricaoId"
                android:layout_width="375dp"
                android:layout_height="94dp"
                android:layout_marginBottom="20sp"
                android:background="@null"
                android:hint="About me..."
                android:textAppearance="@style/TextAppearance.AppCompat.Medium" />

            <Button
                android:id="@+id/confirmPerfilId"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#FF5864"
                android:text="confirm" />
        </LinearLayout>



    </ScrollView>


</LinearLayout>