<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#00FF5864"
    android:orientation="vertical"
    android:padding="20sp"
    tools:context="com.cursoandroid.petinder.activity.Perfil_Usuario">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <Button
                android:id="@+id/backId"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20sp"
                android:background="#FF5864"
                android:text="back"
                android:textColor="#F7F4F4" />

            <ImageView
                android:id="@+id/imagemPerfilId"
                android:layout_width="250dp"
                android:layout_height="250dp"
                android:layout_gravity="center"
                android:layout_marginBottom="20sp"
                android:src="@mipmap/ic_launcher" />

            <TextView
                android:id="@+id/nomePerfil"
                android:layout_width="361dp"
                android:layout_height="88dp"
                android:layout_marginBottom="5sp"
                android:text="name"
                android:textAppearance="@style/TextAppearance.AppCompat.Display2" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="70dp"
                android:layout_marginBottom="5sp"
                android:text="Age: "
                android:textAppearance="@style/TextAppearance.AppCompat.Display1" />

            <TextView
                android:id="@+id/agePerfilId"
                android:layout_width="wrap_content"
                android:layout_height="70dp"
                android:layout_marginBottom="5sp"
                android:background="@null"
                android:hint="Age"
                android:inputType="phone"
                android:textAppearance="@style/TextAppearance.AppCompat.Display1" />
        </LinearLayout>>

            <TextView
                android:id="@+id/descricao"
                android:layout_width="340dp"
                android:layout_height="155dp"
                android:layout_marginBottom="20sp"
                android:background="#00FF655B"
                android:text="About..."
                android:textAppearance="@style/TextAppearance.AppCompat.Large" />
        </LinearLayout>
    </ScrollView>

</LinearLayout>