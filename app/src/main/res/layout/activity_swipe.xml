<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context="com.cursoandroid.petinder.activity.Swipe"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:background="#08070000"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/settingid"
            android:layout_width="80dp"
            android:layout_height="match_parent"
            android:layout_marginBottom="8dp"
            android:onClick="goToSettings"
            android:padding="20sp"
            android:src="@drawable/perfilicon" />

        <ImageView
            android:id="@+id/imageView5"
            android:layout_width="220dp"
            android:layout_height="match_parent"
            android:layout_marginBottom="8dp"
            android:padding="20sp"
            android:src="@drawable/petindertext" />

        <ImageView
            android:id="@+id/matchiesid"
            android:layout_width="70dp"
            android:layout_height="match_parent"
            android:layout_marginBottom="8dp"
            android:onClick="goToMatches"
            android:padding="20sp"
            android:src="@drawable/chaticon" />


    </LinearLayout>

    <com.lorentzos.flingswipe.SwipeFlingAdapterView
        android:id="@+id/frame"
        android:layout_width="match_parent"
        android:layout_height="391dp"
        android:background="#FFFFFF"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0"
        app:rotation_degrees="15.5"
        tools:context=".activity.Swipe" />

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="158dp"
        android:background="#08070000"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="@+id/dislikeid"
        app:layout_constraintStart_toEndOf="@+id/dislikeid">

        <ImageView
            android:id="@+id/dislikeid"
            android:layout_width="152dp"
            android:layout_height="158dp"
            android:layout_marginStart="42dp"
            android:layout_marginLeft="42dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="57dp"
            android:layout_marginRight="57dp"
            android:layout_marginBottom="8dp"
            android:padding="20sp"
            android:src="@drawable/dislikebutton"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="@+id/infobuttonid"
            app:layout_constraintEnd_toStartOf="@+id/likeid"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.687" />

        <ImageView
            android:id="@+id/infobuttonid"
            android:layout_width="118dp"
            android:layout_height="0dp"
            android:layout_marginTop="23dp"
            android:layout_marginBottom="23dp"
            android:padding="20sp"
            android:src="@drawable/iconbutton"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.498"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.0" />

        <ImageView
            android:id="@+id/likeid"
            android:layout_width="152dp"
            android:layout_height="158dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="38dp"
            android:layout_marginRight="38dp"
            android:layout_marginBottom="8dp"
            android:padding="20sp"
            android:src="@drawable/likebutton"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/dislikeid"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.6" />


    </android.support.constraint.ConstraintLayout>

</LinearLayout>